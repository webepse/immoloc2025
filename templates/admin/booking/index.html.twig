{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <div class="container-fluid full">
        <h1 class="my-5">Gestion des réservations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Locataire</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Montant</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for booking in pagination.data %}
                    <tr>
                        <td>{{booking.id}}</td>
                        <td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
                        <td>{{booking.booker.fullName}}</td>
                        <td>{{booking.ad.title}}</td>
                        <td>{{booking.duration}}</td>
                        <td>{{booking.amount}}€</td>
                        <td class="text-center">
                            <a href="{{path('admin_bookings_edit',{'id':booking.id})}}" class="btn btn-warning mx-1"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_bookings_delete',{'id':booking.id})}}" class="btn btn-danger mx-1"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% include "admin/partials/_pagination.html.twig" with {'route':'admin_bookings_index'}%}
    </div>
{% endblock %}
