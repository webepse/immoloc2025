{% extends 'admin/base.html.twig' %}
{% block title %}Dashboard{% endblock %}
{% block body %}
    <div class="container-fluid full">
        {# {{dump(stats)}} #}
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{stats.users}} Utilisateurs</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{stats.ads}} annonces postées</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{stats.bookings}} réservations</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{stats.comments}} commentaires</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Les annonces populaires</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonces</th>
                                <th>Proprio</th>
                                <th class="text-center">Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>{{ad.firstName}} {{ad.lastName}}</td>
                                    <td class="text-center">
                                        <span class="badge bg-dark">{{ad.note | number_format(1,',',' ')}}</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Les pires annonces</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonces</th>
                                <th>Proprio</th>
                                <th class="text-center">Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>{{ad.firstName}} {{ad.lastName}}</td>
                                    <td class="text-center">
                                        <span class="badge bg-dark">{{ad.note | number_format(1,',',' ')}}</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}