{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid full">
        <h1 class="my-5">Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th class="text-center">RÃ©servation</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for ad in pagination.data %}
                    <tr>
                        <td>{{ad.id}}</td>
                        <td>{{ad.title}}</td>
                        <td>{{ad.author.fullName}}</td>
                        <td class="text-center">
                            <span class="badge bg-primary rounded">{{ad.bookings | length}}</span>
                        </td>
                        <td class="text-center">
                             <span class="badge bg-primary rounded">{{ad.avgRatings}}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{path('admin_ads_edit',{'id':ad.id})}}" class="btn btn-warning mx-1"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-danger mx-1"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {# pagination #}
        {% set pages = pagination.pages %}
        {% set page = pagination.page %}
        <div class="d-flex justify-content-center">
            <ul class="pagination pagination-sm">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                  <a class="page-link" href="{{path('admin_ads_index',{'page': page - 1})}}">&laquo;</a>
                </li>
                {% for i in 1..pages %}
                    <li class="page-item {% if page == i %}active{% endif %}">
                        <a class="page-link" href="{{path('admin_ads_index',{'page':i})}}">{{i}}</a>
                    </li>
                {% endfor %}
                <li class="page-item {% if page == pages %}disabled{% endif %}">
                    <a class="page-link" href="{{path('admin_ads_index',{'page': page + 1})}}">&raquo;</a>
                </li>
            </ul>
        </div>

    </div>
{% endblock %}
